<Window x:Class="InfoLocker.AddContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Folder" Height="140" Width="310" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" KeyDown="KeyPressed">
    <StackPanel Margin="10,10,10,10">
        <TextBlock Name="c_label"/>
        <TextBox Name="c_name"/>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="80" HorizontalAlignment="Center" Click="OK_Clicked">OK</Button>
            <Button Grid.Column="1" Width="80" HorizontalAlignment="Center" Click="Cancel_Clicked">Cancel</Button>
        </Grid>
    </StackPanel>
</Window>
